{
  "manifest_version": 2,
  "name": "CC Click Queue",
  "version": "2.2",
  "author": "mandy-h",
  "description": "Adoptable queue for Click Critters Click Exchange",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab",
    "https://clickcritters.com/clickexchange.php*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "/scripts/extension/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.clickcritters.com/clickexchange.php"
      ],
      "css": [
        "/styles/message.css"
      ],
      "js": [
        "/scripts/modules/Message.js",
        "/scripts/content-scripts/ce-home.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.clickcritters.com/clickexchange.php?act=doCE*"
      ],
      "css": [
        "/styles/message.css",
        "/styles/progressBar.css"
      ],
      "js": [
        "/scripts/modules/ExtensionStorage.js",
        "/scripts/modules/Message.js",
        "/scripts/content-scripts/ce-do.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.clickcritters.com/clickexchange.php?act=choose*"
      ],
      "css": [
        "/styles/message.css"
      ],
      "js": [
        "/scripts/modules/Message.js",
        "/scripts/content-scripts/ce-choose-adopt.js"
      ],
      "run_at": "document_start"
    }
  ]
}
